{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
      "eslint:recommended"
  ],
  "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "comma-dangle": ["error", "always-multiline"],
      "camelcase": "error"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  }
}
